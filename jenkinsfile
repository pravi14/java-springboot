pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                echo 'Build'
                sh 'mvn clean package'
            }
        }
        stage('test') {
            steps {
                echo 'test'
                sh 'mvn test'
            }
        }
        stage('sonarqube') {
            steps {
                echo 'sonarqube'
            }
        }
        stage('push to artifactory') {
            steps {
                echo 'push to artifactory'
            }
        }
        stage('deploy to QA') {
            steps {
                echo 'deploy to QA'
            }
        } 
        stage('deploy to prod') {
            steps {
                echo 'deploy to prod'
            }   
        }
    }
    post {
        failure {
            echo 'failure'
        }
        success{
            echo 'success'
        }
        always{
            echo 'always'
        }
        aborted{
            echo 'aborted'
        }   
     }
}

