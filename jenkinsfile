pipeline {
    agent any
    stages {
        stage('test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('package') {
            steps {
                sh 'mvn clean package  -Dmaven.test.skip=true'
            }
        }
        stage('deploy war') {
            steps {
                echo 'deploy'
            }
        }
    }
    post {
        failure {
            echo 'build failure'
        }
        success{
            echo 'build success'
        }
    }
}

